@page "/login"
@layout Layout.EmptyLayout
@rendermode InteractiveServer
@attribute [AllowAnonymous]

@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavManager

<link rel="stylesheet" href="Components/Pages/Login.razor.css" />

<PageTitle>Login</PageTitle>

<div class="login-container">
    <div class="login-box">
        <h1>Member Access</h1>

        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" class="form-control" @bind="username" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" class="form-control" @bind="password" @onkeyup="HandleKeyUp" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="login-error">@errorMessage</div>
        }

        <button class="btn btn-login" @onclick="HandleLogin" disabled="@isProcessing">
            @if (isProcessing)
            {
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            }
            else
            {
                <span>[ LOGIN ]</span>
            }
        </button>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string errorMessage = string.Empty;
    private bool isProcessing = false;

    // OPDATERET (FASE 3): Løser CS0642
    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }

    private async Task HandleLogin()
    {
        isProcessing = true;
        errorMessage = string.Empty;

        var authProvider = (CustomAuthStateProvider)AuthProvider;

        bool success = await authProvider.LoginAsync(username, password);

        if (success)
        {
            NavManager.NavigateTo("/dashboard", forceLoad: true);
        }
        else
        {
            errorMessage = "Fejl i brugernavn eller adgangskode.";
            isProcessing = false;
        }
    }
}